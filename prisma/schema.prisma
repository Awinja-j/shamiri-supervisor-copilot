generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "postgresql"
}

model Supervisor {
  id        String    @id @default(cuid())
  name      String
  email     String    @unique
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  
  fellows   Fellow[]
  overrides SupervisorOverride[]
}

model Fellow {
  id           String     @id @default(cuid())
  name         String
  cohort       String
  supervisorId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])
  sessions     Session[]
  
  @@index([supervisorId])
}

model Session {
  id               String       @id @default(cuid())
  fellowId         String
  groupId          String
  sessionDate      DateTime
  transcript       String       @db.Text
  durationMinutes  Int
  status           String       @default("Pending")
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  
  fellow           Fellow       @relation(fields: [fellowId], references: [id])
  analyses         AIAnalysis[]
  riskFlags        RiskFlag[]
  
  @@index([fellowId])
  @@index([sessionDate])
}

model AIAnalysis {
  id            String    @id @default(cuid())
  sessionId     String
  modelVersion  String
  
  summary       String    @db.Text
  
  contentScore       Int
  contentEvidence    String[]
  contentReasoning   String   @db.Text
  
  facilitationScore      Int
  facilitationEvidence   String[]
  facilitationReasoning  String  @db.Text
  
  protocolScore      Int
  protocolEvidence   String[]
  protocolReasoning  String   @db.Text
  
  riskFlag           String
  riskSeverity       String?
  riskConfidence     Float
  riskQuotes         String[]
  riskReasoning      String   @db.Text
  
  processingTimeMs   Int      @default(0)
  rawOutput          String   @db.Text @default("")
  createdAt          DateTime @default(now())
  
  session            Session  @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  overrides          SupervisorOverride[]
  
  @@index([sessionId])
  @@index([createdAt])
}

model RiskFlag {
  id         String    @id @default(cuid())
  sessionId  String
  severity   String
  quotes     String[]
  resolved   Boolean   @default(false)
  resolvedBy String?
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())
  
  session    Session   @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  
  @@index([sessionId])
  @@index([resolved])
}

model SupervisorOverride {
  id           String     @id @default(cuid())
  analysisId   String
  supervisorId String
  action       String
  previousFlag String
  newFlag      String
  notes        String?    @db.Text
  createdAt    DateTime   @default(now())
  
  analysis     AIAnalysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])
  
  @@index([analysisId])
  @@index([supervisorId])
}