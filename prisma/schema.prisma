generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Supervisor {
  id        String               @id @default(cuid())
  name      String
  email     String               @unique
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
  fellows   Fellow[]
  overrides SupervisorOverride[]
}

model Fellow {
  id           String     @id @default(cuid())
  name         String
  cohort       String
  supervisorId String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])
  sessions     Session[]

  @@index([supervisorId])
}

model Session {
  id              String       @id @default(cuid())
  fellowId        String
  groupId         String
  sessionDate     DateTime
  transcript      String
  durationMinutes Int
  createdAt       DateTime     @default(now())
  updatedAt       DateTime     @updatedAt
  analyses        AIAnalysis[]
  riskFlags       RiskFlag[]
  fellow          Fellow       @relation(fields: [fellowId], references: [id])

  @@index([fellowId])
  @@index([sessionDate])
}

model AIAnalysis {
  id                    String               @id @default(cuid())
  sessionId             String
  modelVersion          String
  summary               String
  contentScore          Int
  contentEvidence       String[]
  contentReasoning      String
  facilitationScore     Int
  facilitationEvidence  String[]
  facilitationReasoning String
  protocolScore         Int
  protocolEvidence      String[]
  protocolReasoning     String
  riskFlag              String
  riskSeverity          String?
  riskConfidence        Float
  processingTimeMs      Int
  rawOutput             String
  createdAt             DateTime             @default(now())
  session               Session              @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  overrides             SupervisorOverride[]

  @@index([sessionId])
  @@index([createdAt])
}

model RiskFlag {
  id         String    @id @default(cuid())
  sessionId  String
  severity   String
  quotes     String[]
  resolved   Boolean   @default(false)
  resolvedBy String?
  resolvedAt DateTime?
  createdAt  DateTime  @default(now())
  session    Session   @relation(fields: [sessionId], references: [id], onDelete: Cascade)

  @@index([sessionId])
  @@index([resolved])
}

model SupervisorOverride {
  id           String     @id @default(cuid())
  analysisId   String
  supervisorId String
  action       String
  previousFlag String
  newFlag      String
  notes        String?
  createdAt    DateTime   @default(now())
  analysis     AIAnalysis @relation(fields: [analysisId], references: [id], onDelete: Cascade)
  supervisor   Supervisor @relation(fields: [supervisorId], references: [id])

  @@index([analysisId])
  @@index([supervisorId])
}
